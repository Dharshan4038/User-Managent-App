<%- include("partials/header"); -%>
<div class="container">
    <div class="form-div">
        <div class="header">
            <h3>Create User</h3>
            <p>Use the below form to create an user</p>
        </div>
        <form class="user-form" action="/adduser" method="post">
            <div class="mb-3">
                <label for="exampleInputName1" class="form-label">Enter Name</label>
                <input type="text" class="form-control" name="name">
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input type="email" class="form-control" name="email">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <label class="form-label"></label>Gender</label>
            <div class="mb-3 form-check">  
              <div class="rbtn">
                <input type="radio" class="form-check-input" name="gender" value="Male">
                <label class="form-check-label" for="exampleCheck1">Male</label>
              </div>
              <div>
                <input type="radio" class="form-check-input" name="gender" value="Female">
                <label class="form-check-label" for="exampleCheck1">Female</label>
              </div>
            </div>
            <label class="form-label"></label>Status</label>
            <div class="mb-3 form-check">  
                <div class="rbtn">
                  <input type="radio" class="form-check-input" name="status" value="Active">
                  <label class="form-check-label" for="exampleCheck1">Active</label>
                </div>
                <div>
                  <input type="radio" class="form-check-input" name="status" value="Inactive">
                  <label class="form-check-label" for="exampleCheck1">Inactive</label>
                </div>
              </div>
            <button type="submit" class="btn btn-success ubtn mt-3">Submit</button>
          </form>
    </div>
</div>
<%- include("partials/footer"); -%>